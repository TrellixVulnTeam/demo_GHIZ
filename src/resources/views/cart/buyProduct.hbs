<!DOCTYPE html>
<html lang="en">
<head>
    <title>Zay Shop - Product Detail Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="/img/apple-icon.png">
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico">

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/templatemo.css">
    <link rel="stylesheet" href="/css/custom.css">

    <!-- Load fonts style after rendering the layout styles -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
    <link rel="stylesheet" href="/css/fontawesome.min.css">

    <!-- Slick -->
    <link rel="stylesheet" type="text/css" href="/css/slick.min.css">
    <link rel="stylesheet" type="text/css" href="/css/slick-theme.css">
</head>
<body>
    <form method="POST" action="/cart/buy/{{cart._id}}?_method=PUT">
    
    <div class="container mt-3">
    <label for="category_name" class="form-label">Product Name</label>
    <input type="text" value="{{cart.cart_product_id.product_name}}" class="form-control">
    <label for="category_name" class="form-label">Details Description</label>
    <textarea type="text" class="form-control" name="detaildescription"></textarea>
    <label for="category_name" class="form-label">Price(VND)</label>
    <input id="ProductPrice" type="number" disabled="true" value="{{cart.cart_product_id.product_price}}" class="form-control">
    <label for="category_name" class="form-label">Amount</label>
    <input id="numberProduct" onchange="CheckChangeAmount()" type="number" value="{{cart.cart_number_product}}" class="form-control" name="cart_number_product">
    <label for="category_name" class="form-label">Total(VND)</label>
    <input id="totalProductPrice" type="number" disabled="true" value="{{totalprice}}" class="form-control">
    </div>
    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Confirm Buy</button>
        <a href="/cart" class="btn btn-secondary">Back</a>
    </div>
    </div>
    </form>
    <script>
        function CheckChangeAmount() {
        var numerProduct = document.getElementById("numberProduct").value;
        var priceProduct = document.getElementById("ProductPrice").value;
        document.getElementById("totalProductPrice").value=parseInt(numerProduct)*parseInt(priceProduct);
        }
    </script>


    <script src="/js/jquery-1.11.0.min.js"></script>
    <script src="/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/templatemo.js"></script>
    <script src="/js/custom.js"></script>
</body>
</html>

